<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<cm:property-placeholder persistent-id="com.boohoo.esb.mybatis">
		<cm:default-properties>
			<cm:property name="json.driver" value="jsonDriver" />
		</cm:default-properties>
	</cm:property-placeholder>

	<!-- START SNIPPET: e1 -->
	<!-- bean which creates/destroys the database table for this example -->
	<bean id="initDatabase" class="com.boohoo.esb.mybatis.database.DatabaseBean" init-method="create" destroy-method="destroy">
		<property name="camelContext" ref="esb-mybatis" />
	</bean>
	<!-- END SNIPPET: e1 -->

	<!-- START SNIPPET: e2 -->
	<!-- order service our business logic bean that creates new orders -->
	<bean id="orderService" class="com.boohoo.esb.mybatis.service.OrderService" />

	<bean id="jsonPrettyPrintedDriver" class="com.thoughtworks.xstream.io.json.JsonHierarchicalStreamDriver" />
	<bean id="jsonDriver" class="com.thoughtworks.xstream.io.json.JettisonMappedXmlDriver" />

	<!-- here is Camel configured with a number of routes -->
	<camelContext id="esb-mybatis" xmlns="http://camel.apache.org/schema/blueprint">
		<dataFormats>
			<xstream id="jsonDataFormat" encoding="UTF-8" driverRef="{{json.driver}}"/>
		</dataFormats>
		<!-- route that generate new orders and insert them in the database -->
		<route id="generateOrder-route" autoStartup="false">
			<from uri="timer:foo?period=5s" />
			<transform>
				<method ref="orderService" method="generateOrder" />
			</transform>
			<to uri="mybatis:insertOrder?statementType=Insert" />
			<marshal ref="jsonDataFormat" />
			<log message="Inserted new order ${body}" />
			<convertBodyTo type="java.lang.String"/>
			<to uri="mongodb:mydb?database=test&amp;collection=orders&amp;operation=save&amp;writeConcern=SAFE&amp;createCollection=true" />
		</route>

		<!-- route that process the orders by picking up new rows from the database and when done processing then update the row to mark it as processed -->
		<route id="processOrder-route" autoStartup="false">
			<from uri="mybatis:selectOrders?statementType=SelectList&amp;consumer.onConsume=consumeOrder" />
			<to uri="bean:orderService?method=processOrder" />
			<marshal ref="jsonDataFormat" />
			<log message="${body}" />
		</route>
		

	</camelContext>
	<!-- END SNIPPET: e2 -->

</blueprint>